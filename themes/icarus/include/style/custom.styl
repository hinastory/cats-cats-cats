.blog-card
    margin-top: 10px;
    margin-bottom: 10px;
    margin-left: 4px;
    margin-right: 16px;
    .hbc-link-wrap
        position: relative;
        margin: 0;
        padding: 0;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.8);
        max-width: 500px;
        border: 1px solid #888888;
        background-color: #ffffff;
        .hbc-link
            text-decoration: none !important;
            .hbc-card
                margin-top: 7px;
                margin-right: 7px;
                margin-bottom: 4px;
                margin-left: 7px;
                box-sizing: inherit;
                .hbc-info
                    padding: 0;
                    color: #222222;
                    font-size: 12px;
                    white-space: nowrap;
                    overflow: hidden;
                    display: block !important;
                    .hbc-favicon
                        height: 16px;
                        width: 16px;
                        margin: 0 4px !important;
                        border: none;
                        vertical-align: bottom;
                        display: inline !important;
                    .hbc-site-name
                        margin: 0 0 0 6px;
                        color: #222222;
                        font-size: 12px;
                        line-height: 12px;
                        text-decoration: none;
                        display: inline !important;
                .hbc-contents
                    height: 114px;
                    margin: 6px 0 0 0;
                    word-break: break-all;
                    white-space: normal;
                    overflow: hidden;
                    display: flex;
                    .hbc-thumbnail
                        max-width: 100px;
                        min-width: 100px;
                        max-height: 108px;
                        padding: 0;
                        margin: 0 6px 4px 4px;
                    .hbc-text
                        flex: 1;
                    .hbc-title
                        color: #111111;
                        font-size: 16px;
                        line-height: 24px;
                        font-weight: bold;
                        overflow: hidden;
                        word-break: break-all;
                    .hbc-url
                        color: #4466ff;
                        font-size: 10px;
                        font-weight: normal;
                        overflow: hidden;
                        display: block;
                        white-space: nowrap;
                        text-overflow: ellipsis;
                        font-style: italic;
                    .hbc-description
                        margin: 0;
                        color: #333333;
                        font-size: 11px;
                        line-height: 17px;
                        padding: 0;
                        overflow: hidden;

.tag-cloud
    a
        color: #4a4a4a
    a:hover
        color: #3273dc
.content
    a.about
        padding-top: 0.6em
        padding-bottom: 0.1em
        height: 1.3em
        line-height: 1.2

.popular-posts-box
    padding-left: 1.5rem;
    margin-top: 1.8rem;
.popular-posts
    display: flex;
    flex-flow: row wrap;
    .popular-posts-item
        display: flex;
        flex-basis: 50%;
        align-items: flex-start;
        text-align: left;
        margin-top: 0.75rem;
        .popular-posts-img
            flex-basis: auto;
            flex-grow: 0;
            flex-shrink: 0;
            margin-right: 1rem;
            img
                object-fit: cover;
                width: 64px;
                height: 64px;
        .popular-posts-title
            flex-basis: 110px;
            flex-grow: 1;
            flex-align: left;
            padding-right: 1rem;

// for details
summary
  cursor: pointer;
  outline: 0;
  padding: 0.7em 0.7em 0.7em 0.9em;
  border: 1px solid #5c93bb30;
  color: var(--c-contrast);
  font-size: .9em;
  border-radius: 9px;
  box-shadow: 0 2px 4px -2px #00000026;

details[open]
  > summary:first-of-type
    list-style-type: disclosure-open;
  border: 1px solid #5c93bb33;
  border-radius: 5px;
  padding-bottom: 1em;
  summary
    margin-bottom: 0.5em;
    border-radius: 5px 5px 0 0;
    box-shadow: none;
    background: #f1f5f9;
    border: none;

details
  > summary:first-of-type
    display: list-item;
    counter-increment: list-item 0;
    list-style: inside disclosure-closed;
