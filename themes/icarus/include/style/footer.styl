/* ---------------------------------
 *            Page Footer
 * --------------------------------- */
footer.footer
    .container
        .level
            display: flex
            justify-content: center
            align-items: center

    .level-start
        display: flex
        justify-content: center
        align-items: center
        flex-direction: column

        +mobile()
            text-align: center

    .level-end
        .field
            flex-wrap: wrap
            align-items: center

            +mobile()
                justify-content: center
                margin-top: 1rem

.footer-logo
    img
        max-height: $logo-height
