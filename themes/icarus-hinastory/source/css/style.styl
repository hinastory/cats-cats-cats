.link-preview
    display: block
    color: #1b1b2e
    .link-area
        display: -webkit-box
        display: -ms-flexbox
        display: flex
        margin: 1em 0
        padding: .5em
        border: 1px solid #c2c2c2
    .descriptions
        overflow: hidden
        margin: 0 .5em
    .og-description
        margin-top: .2em
        line-height: 1.5em
        font-size: .8em
    img
        max-width: 100px

.tag-cloud
    a
        color: #4a4a4a
    a:hover
        color: #3273dc
.content
    a.about
        padding-top: 0.6em
        padding-bottom: 0.1em
        height: 1.3em
        line-height: 1.2

.popular-posts-box
    padding-left: 1.5rem;
    margin-top: 1.8rem;
.popular-posts
    display: flex;
    flex-flow: row wrap;
    .popular-posts-item
        display: flex;
        flex-basis: 50%;
        align-items: flex-start;
        text-align: left;
        margin-top: 0.75rem;
        .popular-posts-img
            flex-basis: auto;
            flex-grow: 0;
            flex-shrink: 0;
            margin-right: 1rem;
            img
                object-fit: cover;
                width: 64px;
                height: 64px;
        .popular-posts-title
            flex-basis: 110px;
            flex-grow: 1;
            flex-align: left;
            padding-right: 1rem;

